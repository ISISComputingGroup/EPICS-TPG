record(mbbi, "$(P)UNITS") 
{
    field(DESC, "Units readback")
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP,  "@devTPG300.proto getUnits $(PORT)")
    field(ZRST, "mbar")
    field(ONST, "Torr")
    field(TWST, "Pa")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:UNITS")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
}

alias("$(P)UNITS", "$(P)UNITS:SP:RBV")

