record(mbbi, "$(P)UNITS") 
{
    field(DESC, "Units readback")
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP,  "@devTPG300.proto getUnits $(PORT)")
    $(IFNOT300) field(ZRST, "hPascal")
    $(IFNOT300) field(ZRVL, "0")
    field(ONST, "mbar")
    field(ONVL, "1")
    field(TWST, "Torr")
    field(TWVL, "2")
    field(THST, "Pa")
    field(THVL, "3")
    $(IFNOT300) field(FRST, "Micron")
    $(IFNOT300) field(FRVL, "4")
    $(IFNOT300) field(FVST, "Volt")
    $(IFNOT300) field(FVVL, "5")
    $(IFNOT300) field(SXST, "Ampere")
    $(IFNOT300) field(SXVL, "6")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:UNITS")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
}

alias("$(P)UNITS", "$(P)UNITS:SP:RBV")

record(mbbo, "$(P)UNITS:SP") 
{
    field(DESC, "Units setpoint")
    field(SCAN, "Passive")
    field(DTYP, "stream")
    field(OUT,  "@devTPG300.proto setUnits $(PORT)")
    $(IFNOT300) field(ZRST, "hPascal")
    $(IFNOT300) field(ZRVL, "0")
    field(ONST, "mbar")
    field(ONVL, "1")
    field(TWST, "Torr")
    field(TWVL, "2")
    field(THST, "Pa")
    field(THVL, "3")
    $(IFNOT300) field(FRST, "Micron")
    $(IFNOT300) field(FRVL, "4")
    $(IFNOT300) field(FVST, "Volt")
    $(IFNOT300) field(FVVL, "5")
    $(IFNOT300) field(SXST, "Ampere")
    $(IFNOT300) field(SXVL, "6")
    field(FLNK, "$(P)UNITS")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:UNITS:SP")
    field(SDIS, "$(P)DISABLE")
}

record(mbbo, "$(P)FUNCTION")
{
    field(DESC, "Switching function selection")
    field(SCAN, "Passive")
    field(VAL, "0")
    field(ZRST, "1")
    field(ONST, "2")
    field(TWST, "3")
    field(THST, "4")
    field(FRST, "A")
    field(FVST, "B")
    field(FLNK, "$(P)FUNCTION:SEL:RB")
}

record(stringin, "$(P)FUNCTION:SEL:RB")
{
    field(DESC, "Selected function readback")
    field(DTYP, "stream")
    field(SCAN, "1 second")
    field(PINI, "YES")
    field(INP, "@devTPG300.proto getFunctionMacro($(P)FUNCTION.VAL,$(P)FUNCTION:SEL) $(PORT)")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:FUNCTION:SEL:RB")
    field(SDIS, "$(P)DISABLE")
}

