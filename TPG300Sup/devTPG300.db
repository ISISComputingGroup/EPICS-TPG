record(bi, "$(P)SIMULATION"){
    field(ZNAM, "OFF")
    field(ONAM, "ON")
}
alias("$(P)SIMULATION", "$(P)SIMULATION:SP:RBV")
alias("$(P)SIMULATION", "$(P)SIMULATION:SP")

record(ai, "$(P)PRESSURE_A1") 
{
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP,  "@devTPG300.proto getPressure(PA1) $(PORT)")
    field(PREC, "3")
    field(SIML, "$(P)SIMULATION")
    field(SVAL, "1e-6")
}

