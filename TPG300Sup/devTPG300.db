## SIMULATION STUFF ##

record(bo, "$(P)SIM") 
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
}

alias("$(P)SIM", "$(P)SIM:SP")

record(mbbi, "$(P)SIM:UNITS") 
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZRST, "mbar")
    field(ONST, "Torr")
    field(TWST, "Pa")
}

alias("$(P)SIM:UNITS","$(P)SIM:UNITS:SP")

alias("$(P)SIM:UNITS","$(P)SIM:UNITS:SP:RBV")

record(ai, "$(P)SIM:PRESSURE") 
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(PREC, "3")
    field(VAL, "1e-6")
}

## END SIMULATION STUFF ##

record(ai, "$(P)PRESSURE_A1") 
{
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP,  "@devTPG300.proto getPressure(PA1) $(PORT)")
    field(PREC, "3")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:PRESSURE")
}

